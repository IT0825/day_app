<header class='top-page-header'>
  <div class='top-title'>
  Day App
  </div>
  <ul class='nav-lists'>
    <% if user_signed_in? %>
      <li><%= link_to current_user.name, "#", class: "nav-link" %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link"  %></li>
