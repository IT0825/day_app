<div class= "main">
  <div class= "title-contents">
    <h1 class= "page-title">
    ユーザー登録
    </h1>
  </div>
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
      </div>
      <%= f.text_field :name, class:"form-control", style: "border: 1px solid;",id:"name", maxlength:"40" %>

      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"form-control", style: "border: 1px solid;", id:"email", autofocus: true %>

      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">※6文字以上の英字と数字の両方を含めた半角英数字</span>
      </div>
      <%= f.password_field :password, class:"form-control", style: "border: 1px solid;", id:"password" %>

      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
      </div>
      <%= f.password_field :password_confirmation, class:"form-control", style: "border: 1px solid;", id:"password-confirmation" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "登録する" ,class:"btn" %>
    </div>
  <% end %>

</div>